<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivService"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivService"
        android:textSize="30sp"
        android:text="Service Name will appear here" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Service Description will appear here"
        android:layout_below="@+id/ivService" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Service Location will appear here"
        android:layout_below="@+id/tvDescription" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rates will appear here"
        android:layout_below="@+id/tvLocation" />

    <TextView
        android:id="@+id/tvProfessionalDetails"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Rates will appear here"
        android:layout_below="@+id/tvRate" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Confirm"
        android:layout_below="@+id/tvProfessionalDetails"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
